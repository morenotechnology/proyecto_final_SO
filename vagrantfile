Vagrant.configure("2") do |config|
  
  # Configuración de la VM para Nginx (Servidor Web)
  config.vm.define "webserver" do |web|
    web.vm.box = "bento/ubuntu-22.04"
    web.vm.hostname = "webserver"
    
    # Configuración de red
    web.vm.network "private_network", ip: "192.168.56.10"
    web.vm.network "forwarded_port", guest: 80, host: 8080, host_ip: "127.0.0.1"
    web.vm.network "forwarded_port", guest: 9100, host: 9100, host_ip: "127.0.0.1"
    
    # Asignación de recursos
    web.vm.provider "virtualbox" do |vb|
      vb.name = "DataExplorer-WebServer"
      vb.memory = "1024"
      vb.cpus = 2
    end
    
    # Provisión con Ansible
    web.vm.provision "ansible" do |ansible|
      ansible.playbook = "ansible/webserver.yml"
      ansible.compatibility_mode = "2.0"
    end
  end
  
  # Configuración de la VM para Prometheus y Grafana (Monitoreo)
  config.vm.define "monitoring" do |monitor|
    monitor.vm.box = "bento/ubuntu-22.04"
    monitor.vm.hostname = "monitoring"
    
    # Configuración de red
    monitor.vm.network "private_network", ip: "192.168.56.11"
    monitor.vm.network "forwarded_port", guest: 9090, host: 9090, host_ip: "127.0.0.1"
    monitor.vm.network "forwarded_port", guest: 3000, host: 3000, host_ip: "127.0.0.1"
    
    # Asignación de recursos
    monitor.vm.provider "virtualbox" do |vb|
      vb.name = "DataExplorer-Monitoring"
      vb.memory = "2048"
      vb.cpus = 2
    end
    
    # Provisión con Ansible
    monitor.vm.provision "ansible" do |ansible|
      ansible.playbook = "ansible/monitoring.yml"
      ansible.compatibility_mode = "2.0"
    end
  end
  
end
